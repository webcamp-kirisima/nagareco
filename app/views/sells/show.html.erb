<div class="container card card-body bg-light p-3">
  <div class="row">
    <div class="col-3 offset-md-2">
      <h2>商品詳細</h2>
        <%= attachment_image_tag @product, :image, :fill, 250, 250, format: 'jpeg', fallback: "no_image.jpg", class: "img-fluid"  %>      <div>
        <p>ジャンル: <span class="badge badge-pill genre-icon"><%= @product.genre.genre %></span></p>
      </div>
    </div>
    <div class="col-5" style="padding-top: 45px;">
      <ul class="list-group text-center">
        <li class="list-group-item">購入日:<span> <%= @sell.created_at.strftime('%Y/%m/%d') %></span></li>
        <li class="list-group-item">シングル/アルバム名:<sapn> <%= @product.cd_title %></sapn></li>
        <li class="list-group-item">アーティスト名:<span> <%= @product.artist.artist %></span></li>
        <li class="list-group-item">レーベル名:<span> <%= @product.label.label %></span></li>
        <li class="list-group-item">購入枚数:<span> <%= @sell_detail.quantity %>枚</span></li>
        <li class="list-group-item">価格（税別）:<span> <%= @sell_detail.price %> 円</span></li>
      </ul>
    </div>
  </div>
</div>
<div class="container">
  <table>
    <tr>
      <td>購入者：</td><td><%= current_user.last_name %> <%= current_user.first_name %>様</td>
    </tr>
    <tr>
      <td>受取人氏名：</td><td><%= @sell.ship_l_name %> <%= @sell.ship_f_name %>様</td>
    </tr>
      <td>郵便番号：</td><td><%= @sell.ship_code %></td>
    <tr>
      <td>住所：</td><td><%= @sell.ship_address %></td>
    </tr>
    <tr>
      <td>電話番号：</td><td><%= @sell.ship_tel %></td>
    </tr>
  </table>
</div>
  <div class="col-5 order">
    <table>
      <tr>
        <th>合計金額：￥<%= (@sell_detail.price).to_i * (@sell_detail.quantity).to_i %>円</th>
      </tr>
      <tr>
        <th>支払い情報</th>
      </tr>
        <td><%= @sell.pay %></td>
    </table>
  </div>
</div>