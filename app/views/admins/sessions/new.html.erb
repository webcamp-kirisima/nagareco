<div class="container">
  <table  border="1" bordercolor="#4682B4" cellpadding="15" style="width:100%; border-collapse:separate;">
    <h2>管理画面ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <tr>
        <th><%= f.label :メールアドレス %></th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
      </tr>

      <tr>
        <th><%= f.label :パスワード %></th>
        <td><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me %>
              <%= f.label :パスワードを保存する %>
            <% end %>
        </td>
      </tr>

      <tr>
        <td colspan="2"><%= f.submit "Log in", class: "btn btn-primary btn-block" %></td>
      </tr>
    <% end %>
  </table>
</div>
<div class="container">

    <%= render "admins/shared/links" %>

</div>
