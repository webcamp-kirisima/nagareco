<div class="container">
  <%= form_for(@genre) do |f| %>
    <%= render "layouts/error_messages", model: f.object %>
    <div class="form-group">
      <%= f.label :"ジャンル" %>
      <%= f.text_field :genre, class: "form-control" %>
    </div>
    <div>
      <%= f.submit '追加', class:"btn btn-success" %>
    </div>
  <% end %>
</div>
