<div class="container">
  <div class="row card card-body bg-light p-4">
    <div class="headline">
      <h2>注文一覧</h2>
    </div>
    <table class="table table-bordered text-center" style="height: 100px;">
      <thead class="thead thead-light">
        <tr>
          <th class="align-middle">注文ID</th>
          <th class="align-middle">受注日</th>
          <th class="align-middle">名前</th>
          <th class="align-middle">合計金額</th>
          <th class="align-middle">発送状況</th>
          <th class="align-middle"></th>
        </tr>
      </thead>
      <tbody>
        <% @sells.each do |s| %>
          <tr>
            <td class="align-middle"><%= s.id %></td>
            <td class="align-middle"><%= s.created_at %></td>
            <td class="align-middle"><%= s.user.last_name %></td>
            <td class="align-middle"><%= s.total %></td>
            <td class="align-middle"><%= s.ship_status %></td>
            <td class="align-middle"><%= link_to "詳細", admin_sell_path(s.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @sells %>
  </div>
</div>
